<form id="form-work-edit-panel" method="post">
	<h1>Arbeit bearbeiten</h1>
	<p>Bearbeiten Sie die ausgew√§hlte Arbeit.</p>
	<div class="form-group">
		<label>Arbeit-ID</label>
		<input name="idwork" value="{{idwork}}" class="form-control" type="number" maxlength="100" readonly required>
	</div>
	<div class="form-group">
		<label>Projekt *</label>
		<select name="select-project" class="form-control" required>
			<option value="0">-</option>
			{{#projects}}
			<option value="{{idproject}}">{{name}}</option>
			{{/projects}}
		</select>
	</div>
	<div class="form-group">
		<label>Datum *</label>
		<input name="workdate" value="{{workdate}}" class="form-control" type="date" maxlength="100" required>
	</div>
	<div class="form-group">
		<label>Arbeit in Minuten *</label>
		<input name="duration" value="{{duration}}" class="form-control" type="number" min="0" required>
	</div>
	<div class="form-group">
		<label>Beschreibung *</label>
		<textarea name="description" class="form-control" type="text" maxlength="1000" required>{{description}}</textarea>
	</div>
	<button class="btn btn-lg btn-primary btn-block" type="submit">Bearbeiten</button>
</form>
