<form id="form-work-add" method="post">
	<h1>Arbeit hinzufügen</h1>
	<p>Fügen Sie eine geleistete Arbeit zum System hinzu.</p>
	<div class="form-group">
		<label>Projekt *</label>
		<select name="select-project" class="form-control" required>
			<option value="0">-</option>
			{{#projects}}
			<option value="{{idproject}}">{{name}}</option>
			{{/projects}}
		</select>
	</div>
	<div class="form-group">
		<label>Datum *</label>
		<input name="workdate" class="form-control" type="date" maxlength="100" required>
	</div>
	<div class="form-group">
		<label>Arbeit in Minuten *</label>
		<input name="duration" class="form-control" type="number" min="0" value="0" required>
	</div>
	<div class="form-group">
		<label>Beschreibung *</label>
		<textarea name="description" class="form-control" type="text" maxlength="1000" required></textarea>
	</div>
	<button class="btn btn-lg btn-primary btn-block" type="submit">Erstellen</button>
</form>
